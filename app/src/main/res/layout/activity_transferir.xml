<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TransferirActivity">

    <EditText
        android:id="@+id/editTextValorTransferir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o valor a transferir"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextDestinatario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o destinatÃ¡rio"
        android:layout_below="@id/editTextValorTransferir"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonTransferir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transferir"
        android:layout_below="@id/editTextDestinatario"/>

</RelativeLayout>
